{
  "manifest_version": 3,
  "name": "PromptIn: AI Prompt Manager",
  "description": "Manage, organize, and optimize AI prompts in one extension.",
  "version": "1.0.0",
  "permissions": ["storage", "unlimitedStorage", "tabs"],
  "icons": {
    "16": "icon/icon16.png",
    "48": "icon/icon48.png",
    "128": "icon/icon128.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "pages/ExtPay.js",
        "inputFieldTrigger.js",
        "addButton.js",
        "addPlatformClickEvent.js",
        "removeGitHubElement.js",
        "content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icon/icon48.png", "i18n/*.json", "pages/ExtPay.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "business.promptin@gmail.com",
      "strict_min_version": "109.0"
    }
  }
}
